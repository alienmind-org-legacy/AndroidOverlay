.  device.conf

DST=overlay.zip
SGN=overlay-signed.zip
rm -f $DST $SGN
#zip -r9 ../overlay.zip META-INF system
SYSTEM_DEV=`echo $SYSTEM_DEV | sed 's/\//\\\\\//g'`
cat updater-script.tpl | sed "s/SYSTEM_DEV/$SYSTEM_DEV/g" > META-INF/com/google/android/updater-script
~/android/tools/7za a -tzip $DST META-INF overlay.sh -mx9
~/android/tools/sign.sh $DST $SGN

